# Advo Cache Configuration
# Copy this file to .env and customize as needed
# All instances should use the same .env for consistency

# Server
ADVO_PORT=:8081
ADVO_ENVIRONMENT=development

# Role: "leader" or "replica"
# Leader: Primary cache, sends heartbeats, accepts replicas
# Replica: Connects to leader, receives replication, auto-promotes on leader failure
ADVO_ROLE=leader

# Cache
ADVO_CACHE_TTL_MINUTES=15
ADVO_JITTER_PERCENT=20

# Locking
ADVO_LOCK_TTL_SECONDS=30
ADVO_LOCK_CLEANUP_SECONDS=5

# Replication
ADVO_HEARTBEAT_INTERVAL_SECONDS=5
ADVO_HEARTBEAT_TIMEOUT_SECONDS=10
ADVO_LEADER_ADDRESS=

# Logging
ADVO_LOG_LEVEL=info
